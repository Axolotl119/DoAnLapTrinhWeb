@page
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // Ví dụ: ViewBag.OrderCount, ViewBag.MerchantCount, ...
}

<h2 class="fw-bold mb-4 text-accent">Tổng quan hệ thống</h2>
<div class="row g-4">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card border-0 shadow dashboard-card h-100">
            <div class="card-body text-center py-4">
                <div class="dashboard-icon mb-3">
                    <i class="bi bi-list-ul"></i>
                </div>
                <div class="dashboard-label mb-1">Đơn hàng</div>
                <div class="dashboard-value">@ViewBag.OrderCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card border-0 shadow dashboard-card h-100">
            <div class="card-body text-center py-4">
                <div class="dashboard-icon mb-3">
                    <i class="bi bi-shop"></i>
                </div>
                <div class="dashboard-label mb-1">Nhà hàng</div>
                <div class="dashboard-value">@ViewBag.MerchantCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card border-0 shadow dashboard-card h-100">
            <div class="card-body text-center py-4">
                <div class="dashboard-icon mb-3">
                    <i class="bi bi-egg-fried"></i>
                </div>
                <div class="dashboard-label mb-1">Món ăn</div>
                <div class="dashboard-value">@ViewBag.FoodItemCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card border-0 shadow dashboard-card h-100">
            <div class="card-body text-center py-4">
                <div class="dashboard-icon mb-3">
                    <i class="bi bi-tags"></i>
                </div>
                <div class="dashboard-label mb-1">Danh mục</div>
                <div class="dashboard-value">@ViewBag.CategoryCount</div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .dashboard-card {
            border-radius: 1.5rem;
            transition: box-shadow 0.2s, transform 0.2s;
            background: #fff;
        }
        .dashboard-card:hover {
            box-shadow: 0 8px 32px rgba(255, 150, 113, 0.12), 0 2px 8px rgba(0,0,0,0.06);
            transform: translateY(-4px) scale(1.03);
        }
        .dashboard-icon {
            width: 56px;
            height: 56px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            background: linear-gradient(135deg, #FF9671 60%, #FF6B6B 100%);
            border-radius: 16px;
            color: #fff;
            font-size: 2.2rem;
            box-shadow: 0 2px 8px rgba(255, 150, 113, 0.10);
        }
        .dashboard-label {
            font-size: 1.1rem;
            font-weight: 600;
            color: #232131;
            letter-spacing: 0.5px;
        }
        .dashboard-value {
            font-size: 2.1rem;
            font-weight: bold;
            color: #FF9671;
        }
        
    </style>
}