@model IEnumerable<Efood_Menu.Models.Category>

@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-2">
    <h2 class="fw-bold text-accent mb-0">Danh mục món ăn</h2>
    <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm efood-btn-add">
        <i class="bi bi-plus-circle fs-5"></i>
        Thêm danh mục
    </a>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0 efood-admin-table">
                <thead class="table-light">
                    <tr>
                        <th class="text-start">Tên danh mục</th>
                        <th class="text-center" style="width:160px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fs-6 fw-semibold">@item.Name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-circle me-1" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info rounded-circle me-1" title="Chi tiết">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-circle" title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .efood-admin-table th, .efood-admin-table td {
            vertical-align: middle !important;
        }
        .efood-btn-add {
            border-radius: 2rem;
            font-weight: 500;
            padding: 0.5rem 1.25rem;
        }
        .btn-warning {
            background: #ffe082;
            border: none;
            color: #b26a00;
        }
        .btn-info {
            background: #81d4fa;
            border: none;
            color: #01579b;
        }
        .btn-danger {
            background: #ff8a80;
            border: none;
            color: #b71c1c;
        }
        .btn-warning:hover, .btn-info:hover, .btn-danger:hover {
            filter: brightness(0.95);
        }
        .text-accent {
            color: #FF9671 !important;
        }
        .card {
            border-radius: 1.5rem !important;
        }
        @@media (max-width: 767.98px) {
            .card { border-radius: 1rem !important; }
            .efood-btn-add { width: 100%; justify-content: center; }
        }
    </style>
}
