@{
    // Kiểm tra nếu là Home/Index thì ẩn sidebar
    var hideSidebar = (ViewContext.RouteData.Values["Controller"]?.ToString() == "Home"
        && (ViewContext.RouteData.Values["Action"]?.ToString() == "Index" || ViewContext.RouteData.Values["Action"] == null));
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Efood_Menu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="layout-wrapper d-flex">
        @if (!hideSidebar)
        {
            <nav class="sidebar-modern">
                <div class="sidebar-logo">
                    <div class="icon-box icon-box-bg">
                        <!-- Store Icon -->
                        <svg width="35" height="35" fill="none" stroke="#FF9671" stroke-width="2" viewBox="0 0 24 24">
                            <rect x="4" y="6" width="16" height="12" rx="2" />
                            <path d="M4 10h16M9 16v-4h6v4" />
                        </svg>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li class="side-menu-item">
                        <a href="/" title="Trang chủ" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                            <div class="icon-box">
                                <!-- Home Icon -->
                                <svg width="24" height="24" fill="none" stroke="#FF9671" stroke-width="2" viewBox="0 0 24 24">
                                    <path d="M9.73 2.79C11 1.78 12.78 1.74 14.09 2.67L20.34 7.66C21.01 8.18 21.42 8.95 21.49 9.79V18.1C21.5 20.19 19.85 21.89 17.78 22H15.79C14.84 21.98 14.07 21.24 14 20.31V17.31C14 17 13.76 16.74 13.45 16.69H10.69C10.37 16.69 10.11 16.92 10.07 17.22V20.16C9.9 21.28 9.2 21.93 8.33 21.99H6.41C4.32 21.99 2.61 20.36 2.5 18.3V9.99C2.51 9.14 2.88 8.35 3.5 7.8L9.73 2.79Z"/>
                                </svg>
                            </div>
                        </a>
                    </li>
                    <!-- Thêm các item khác ở đây, đồng bộ icon-box và svg -->
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Mail Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <rect x="3" y="5" width="18" height="14" rx="2" />
                                    <path d="M3 7l9 6 9-6" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="/fooditems/index">
                            <div class="icon-box">
                                <!-- Settings Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="3" />
                                    <path
                                        d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33h.09A1.65 1.65 0 0 0 9 3.09V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51h.09a1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.09a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Order Icon -->
                                <img src="~/assets/icons/order.svg" alt="Order Icon" width="20" height="20">
                            </div>
                        </a>
                    </li>
                </ul>
                <!-- Sidebar Footer: Đăng nhập/Đăng xuất -->
                <div class="sidebar-footer mt-auto mb-4">
                    <div class="side-menu-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/Identity/Account/Logout" title="Đăng xuất">
                                <div class="icon-box">
                                    <!-- Logout Icon -->
                                    <svg width="24" height="24" fill="none" stroke="#FF9671" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                                        <polyline points="16 17 21 12 16 7" />
                                        <line x1="21" y1="12" x2="9" y2="12" />
                                    </svg>
                                </div>
                            </a>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" title="Đăng nhập">
                                <div class="icon-box">
                                    <!-- Login Icon -->
                                    <svg width="24" height="24" fill="none" stroke="#FF9671" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" />
                                        <polyline points="10 17 15 12 10 7" />
                                        <line x1="15" y1="12" x2="3" y2="12" />
                                    </svg>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </nav>
        }
        <main class="main-content flex-grow-1">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>

