<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Efood_Menu</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
    <div class="layout-wrapper">
        @if (!(ViewContext.RouteData.Values["Action"]?.ToString() == "Login" &&
                ViewContext.RouteData.Values["Controller"]?.ToString() == "Account"))
        {
            <nav class="sidebar-modern">
                <div class="sidebar-logo">
                    <!-- Store Icon -->
                    <div class="icon-box icon-box-bg">
                        <svg width="35" height="35" fill="none" stroke="#FF9671" stroke-width="2" viewBox="0 0 24 24">
                            <rect x="4" y="6" width="16" height="12" rx="2" />
                            <path d="M4 10h16M9 16v-4h6v4" />
                        </svg>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li class="side-menu-item">
                        <a href="#" class="active">
                            <div class="icon-box icon-box-active">
                                <!-- Home Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <path d="M3 12L12 3l9 9" />
                                    <path d="M9 21V9h6v12" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Discount/Badge Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="3" />
                                    <path
                                        d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33h.09A1.65 1.65 0 0 0 9 3.09V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51h.09a1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.09a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Pie Chart Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <path d="M21 12A9 9 0 1 1 12 3v9z" />
                                    <path d="M12 3a9 9 0 0 1 9 9h-9z" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Mail Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <rect x="3" y="5" width="18" height="14" rx="2" />
                                    <path d="M3 7l9 6 9-6" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Bell Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <path d="M18 8a6 6 0 0 0-12 0c0 7-3 9-3 9h18s-3-2-3-9" />
                                    <path d="M13.73 21a2 2 0 0 1-3.46 0" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Settings Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="3" />
                                    <path
                                        d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33h.09A1.65 1.65 0 0 0 9 3.09V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51h.09a1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.09a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z" />
                                </svg>
                            </div>
                        </a>
                    </li>
                    <li class="side-menu-item">
                        <a href="#">
                            <div class="icon-box">
                                <!-- Logout Icon -->
                                <svg width="20" height="20" fill="none" stroke="#FF9671" stroke-width="2"
                                    viewBox="0 0 24 24">
                                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                                    <polyline points="16 17 21 12 16 7" />
                                    <line x1="21" y1="12" x2="9" y2="12" />
                                </svg>
                            </div>
                        </a>
                    </li>
                </ul>
            </nav>
        }
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/edit-food.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
