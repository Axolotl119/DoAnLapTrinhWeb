@model IEnumerable<Efood_Menu.Models.FoodItem>
@using System.Globalization

@{
    ViewData["Title"] = "Menu Món Ăn";
    var viVN = new CultureInfo("vi-VN");
}

<h1 class="choose-dishes-title">Chọn món ăn</h1>

<p class="text-end">
    <a asp-action="Create" class="btn efood-btn-add">
        <i class="bi bi-plus-circle me-2"></i>
        Thêm món mới
    </a>
</p>

<!-- Danh sách món ăn dạng bảng đẹp cho efood menu -->
<div class="table-responsive mb-5">
    <table class="table efood-table align-middle mb-0">
        <thead>
            <tr>
                <th class="text-center" style="width:90px;">Ảnh</th>
                <th class="text-start">Tên món</th>
                <th class="text-end">Giá</th>
                <th class="text-center" style="width:160px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                             alt="@item.Name"
                             class="efood-table-img" />
                    </td>
                    <td class="fw-semibold fs-5 text-light">@item.Name</td>
                    <td class="text-end fs-5 text-light">@item.Price.ToString("c0", viVN)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="efood-action-btn efood-action-edit" title="Sửa">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="efood-action-btn efood-action-info" title="Chi tiết">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="efood-action-btn efood-action-delete" title="Xóa">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="food-card-grid">
    @foreach (var item in Model)
    {
        <div class="food-card">
            <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                 alt="@item.Name"
                 class="food-card__image" />
            <div class="food-card__title">@item.Name</div>
            <div class="food-card__price">@item.Price.ToString("c0", viVN)</div>
            <div class="food-card__order">
                <a asp-action="Order" asp-route-id="@item.Id" class="btn btn-success w-100">
                    Đặt Món
                </a>
            </div>
        </div>
    }
</div>
